<Window x:Class="LSA.App.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LSA Overlay"
        Width="170"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="8"
            Background="{StaticResource PrimaryBrush}"
            Opacity="0.94"
            BorderBrush="{StaticResource AccentBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    CornerRadius="8,8,0,0"
                    Background="{StaticResource SecondaryBrush}">
                <Grid Margin="6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LSA"
                               Foreground="{StaticResource HighlightBrush}"
                               FontSize="8"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                        <Border x:Name="MockBadge"
                                CornerRadius="3"
                                Background="#44FF6B6B"
                                Padding="2,1"
                                Margin="0,0,4,0"
                                Visibility="Collapsed">
                            <TextBlock Text="M"
                                       Foreground="#FFFF6B6B"
                                       FontSize="6"
                                       FontWeight="Bold"/>
                        </Border>
                        <Button x:Name="CollapseBtn"
                                Content="-"
                                Click="CollapseBtn_Click"
                                Width="16"
                                Height="16"
                                Background="Transparent"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0"
                                FontSize="8"
                                Cursor="Hand"/>
                        <Button x:Name="ExitBtn"
                                Content="X"
                                Click="ExitBtn_Click"
                                Width="16"
                                Height="16"
                                Margin="2,0,0,0"
                                Background="Transparent"
                                Foreground="{StaticResource HighlightBrush}"
                                BorderThickness="0"
                                FontSize="7"
                                FontWeight="Bold"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Background="{StaticResource AccentBrush}"
                    Padding="6,0">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="PhaseText"
                               Text="Idle"
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="7"/>
                    <TextBlock Text=" | "
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="7"/>
                    <TextBlock x:Name="ChampionText"
                               Text="-"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="7"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <StackPanel x:Name="ContentPanel"
                        Grid.Row="2"
                        Margin="6,4,6,6">
                <TextBlock Text="Augments"
                           Foreground="{StaticResource HighlightBrush}"
                           FontSize="8"
                           FontWeight="Bold"
                           Margin="0,0,0,3"/>
                <ItemsControl x:Name="AugmentList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3"
                                    Background="#22FFFFFF"
                                    Margin="0,0,0,2"
                                    Padding="4,3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0"
                                             Width="5"
                                             Height="5"
                                             Fill="{Binding TierBrush}"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               Foreground="{StaticResource TextBrush}"
                                               FontSize="7"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Height="1"
                        Background="#33FFFFFF"
                        Margin="0,4"/>

                <TextBlock Text="Core"
                           Foreground="{StaticResource HighlightBrush}"
                           FontSize="8"
                           FontWeight="Bold"
                           Margin="0,0,0,2"/>
                <ItemsControl x:Name="CoreItemList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3"
                                    Background="#1AFFFFFF"
                                    Margin="0,0,0,2"
                                    Padding="4,3">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="{StaticResource TextBrush}"
                                           FontSize="7"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Situational"
                           Foreground="{StaticResource SubTextBrush}"
                           FontSize="7"
                           Margin="0,3,0,2"/>
                <ItemsControl x:Name="SituationalItemList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3"
                                    Background="#1AFFFFFF"
                                    Margin="0,0,0,2"
                                    Padding="4,3">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="{StaticResource TextBrush}"
                                           FontSize="7"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Visibility="Collapsed">
                <TextBlock x:Name="ClickThroughText"/>
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="ConnIndicator"
                             Width="8"
                             Height="8"/>
                    <TextBlock x:Name="ConnText"/>
                </StackPanel>
                <TextBox x:Name="ConnectionLogTextBox"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
