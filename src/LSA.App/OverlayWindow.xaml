            <!-- ===== ÏÉÅÎã® Î∞î ===== -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0"
                    Background="{StaticResource SecondaryBrush}">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Î°úÍ≥†/ÌÉÄÏù¥ÌãÄ -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="‚öîÔ∏è" FontSize="18" Margin="0,0,6,0"/>
                        <TextBlock Text="LSA"
                                   Foreground="{StaticResource HighlightBrush}"
                                   FontSize="16" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Î≤ÑÌäº ÏòÅÏó≠ -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                        <!-- MOCK Î∞∞ÏßÄ -->
                        <Border x:Name="MockBadge" CornerRadius="4"
                                Background="#44FF6B6B" Padding="4,2"
                                Margin="0,0,8,0" Visibility="Collapsed">
                            <TextBlock Text="MOCK" Foreground="#FFFF6B6B"
                                       FontSize="10" FontWeight="Bold"/>
                        </Border>
                        <!-- Ï†ëÍ∏∞ Î≤ÑÌäº -->
                        <Button x:Name="CollapseBtn" Content="‚Äî"
                                Click="CollapseBtn_Click"
                                Width="28" Height="28"
                                Background="Transparent"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0" FontSize="14"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== ÏÉÅÌÉú ÌëúÏãúÏ§Ñ ===== -->
            <Border Grid.Row="1" Background="{StaticResource AccentBrush}" Padding="12,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="PhaseText" Text="ÎåÄÍ∏∞ Ï§ë..."
                                   Foreground="{StaticResource SubTextBrush}" FontSize="11"/>
                        <TextBlock Text="  |  " Foreground="{StaticResource SubTextBrush}" FontSize="11"/>
                        <TextBlock x:Name="ChampionText" Text=""
                                   Foreground="{StaticResource TextBrush}" FontSize="11" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Ïó∞Í≤∞ ÏÉÅÌÉú Ïù∏ÎîîÏºÄÏù¥ÌÑ∞ -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Ellipse x:Name="ConnIndicator" Width="8" Height="8"
                                 Fill="#FF808080" Margin="0,0,4,0"/>
                        <TextBlock x:Name="ConnText" Text="ÎØ∏Ïó∞Í≤∞"
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="9" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== Î≥∏Î¨∏ ÏΩòÌÖêÏ∏† (Ïä§ÌÅ¨Î°§ Í∞ÄÎä•) ===== -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                          Margin="0" Padding="0">
                <StackPanel x:Name="ContentPanel" Margin="12,8,12,12">

                    <!-- Ï¶ùÍ∞ï Ï∂îÏ≤ú ÏÑπÏÖò -->
                    <TextBlock Text="üéØ Ï¶ùÍ∞ï Ï∂îÏ≤ú"
                               Foreground="{StaticResource HighlightBrush}"
                               FontSize="14" FontWeight="Bold" Margin="0,4,0,8"/>

                    <!-- "ÌòÑÏû¨ 3Í∞ú Ï¶ùÍ∞ï ÏÑ†ÌÉù" ÏïàÎÇ¥ -->
                    <Border x:Name="AugmentSelectHint" CornerRadius="6"
                            Background="#22FFFFFF" Padding="8,6" Margin="0,0,0,6"
                            Visibility="Collapsed">
                        <TextBlock Text="ÏïÑÎûò Î™©Î°ùÏóêÏÑú ÌòÑÏû¨ Îú¨ 3Í∞ú Ï¶ùÍ∞ïÏùÑ ÌÅ¥Î¶≠ÌïòÏÑ∏Ïöî"
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="11" TextWrapping="Wrap"/>
                    </Border>

                    <!-- Ï¶ùÍ∞ï Î¶¨Ïä§Ìä∏ -->
                    <ItemsControl x:Name="AugmentList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6"
                                        Background="#22FFFFFF"
                                        Margin="0,0,0,4"
                                        Padding="10,8"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="Augment_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Ìã∞Ïñ¥ Î±ÉÏßÄ -->
                                        <Border Grid.Column="0" CornerRadius="4"
                                                Width="28" Height="28"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Background="{Binding TierBrush}">
                                            <TextBlock Text="{Binding Tier}"
                                                       Foreground="White"
                                                       FontSize="14" FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Ï¶ùÍ∞ï Ï†ïÎ≥¥ -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextBrush}"
                                                       FontSize="13" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TagsText}"
                                                       Foreground="{StaticResource SubTextBrush}"
                                                       FontSize="10" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding ReasonText}"
                                                       Foreground="#FFAED581"
                                                       FontSize="11" Margin="0,2,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Íµ¨Î∂ÑÏÑ† -->
                    <Border Height="1" Background="#33FFFFFF" Margin="0,8"/>

                    <!-- ÏïÑÏù¥ÌÖú Ï∂îÏ≤ú ÏÑπÏÖò -->
                    <TextBlock Text="üõ°Ô∏è ÏïÑÏù¥ÌÖú ÎπåÎìú"
                               Foreground="{StaticResource HighlightBrush}"
                               FontSize="14" FontWeight="Bold" Margin="0,4,0,8"/>

                    <!-- ÏΩîÏñ¥ ÏïÑÏù¥ÌÖú -->
                    <TextBlock Text="ÏΩîÏñ¥"
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="11" Margin="0,0,0,4"/>
                    <ItemsControl x:Name="CoreItemList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4"
                                        Background="#1AFFFFFF"
                                        Margin="0,0,0,3"
                                        Padding="8,6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Reason}"
                                                   Foreground="{StaticResource SubTextBrush}"
                                                   FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- ÏÉÅÌô©ÌÖú -->
                    <TextBlock Text="ÏÉÅÌô©ÌÖú"
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="11" Margin="0,6,0,4"/>
                    <ItemsControl x:Name="SituationalItemList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4"
                                        Background="#1AFFFFFF"
                                        Margin="0,0,0,3"
                                        Padding="8,6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Reason}"
                                                   Foreground="#FFFFAB40"
                                                   FontSize="10" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Ìï´ÌÇ§ ÏïàÎÇ¥ -->
                    <Border CornerRadius="6" Background="#11FFFFFF"
                            Padding="8,6" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="‚å®Ô∏è Îã®Ï∂ïÌÇ§" Foreground="{StaticResource SubTextBrush}"
                                       FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Foreground="{StaticResource SubTextBrush}" FontSize="10">
                                <Run Text="Ctrl+Shift+O" FontWeight="SemiBold"/> ‚Äî Ïò§Î≤ÑÎ†àÏù¥ ON/OFF
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource SubTextBrush}" FontSize="10">
                                <Run Text="Ctrl+Shift+C" FontWeight="SemiBold"/> ‚Äî ÌÅ¥Î¶≠ ÌÜµÍ≥º ÌÜ†Í∏Ä
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource SubTextBrush}" FontSize="10">
                                <Run Text="Ctrl+Shift+P" FontWeight="SemiBold"/> ‚Äî [DEV] Phase Î≥ÄÍ≤Ω
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
