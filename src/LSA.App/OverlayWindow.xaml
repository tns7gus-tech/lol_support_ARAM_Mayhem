<Window x:Class="LSA.App.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LSA Overlay"
        Width="340" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="12"
            Background="{StaticResource PrimaryBrush}"
            Opacity="0.92"
            BorderBrush="{StaticResource AccentBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <!-- ?곷떒 諛?-->
                <RowDefinition Height="44"/>
                <!-- ?곹깭 ?쒖떆 -->
                <RowDefinition Height="30"/>
                <!-- 蹂몃Ц (利앷컯 + ?꾩씠?? -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== ?곷떒 諛?===== -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0"
                    Background="{StaticResource SecondaryBrush}">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 濡쒓퀬/??댄? -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⚔️" FontSize="18" Margin="0,0,6,0"/>
                        <TextBlock Text="LSA"
                                   Foreground="{StaticResource HighlightBrush}"
                                   FontSize="16" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 踰꾪듉 ?곸뿭 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                        <!-- MOCK 諛곗? -->
                        <Border x:Name="MockBadge" CornerRadius="4"
                                Background="#44FF6B6B" Padding="4,2"
                                Margin="0,0,8,0" Visibility="Collapsed">
                            <TextBlock Text="MOCK" Foreground="#FFFF6B6B"
                                       FontSize="10" FontWeight="Bold"/>
                        </Border>
                        <!-- ?묎린 踰꾪듉 -->
                                                <Button x:Name="CollapseBtn" Content="-"
                                Click="CollapseBtn_Click"
                                Width="28" Height="28"
                                Background="Transparent"
                                Foreground="{StaticResource TextBrush}"
                                BorderThickness="0" FontSize="14"
                                Cursor="Hand"/>
                        <Button x:Name="ExitBtn" Content="X"
                                Click="ExitBtn_Click"
                                Width="28" Height="28"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                Foreground="{StaticResource HighlightBrush}"
                                BorderThickness="0" FontSize="12" FontWeight="Bold"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== ?곹깭 ?쒖떆以?===== -->
            <Border Grid.Row="1" Background="{StaticResource AccentBrush}" Padding="12,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="PhaseText" Text="대기 중..."
                                   Foreground="{StaticResource SubTextBrush}" FontSize="11"/>
                        <TextBlock Text="  |  " Foreground="{StaticResource SubTextBrush}" FontSize="11"/>
                        <TextBlock x:Name="ChampionText" Text=""
                                   Foreground="{StaticResource TextBrush}" FontSize="11" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- ?곌껐 ?곹깭 ?몃뵒耳?댄꽣 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock x:Name="ClickThroughText" Text="CT OFF"
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="9" FontWeight="SemiBold"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <Ellipse x:Name="ConnIndicator" Width="8" Height="8"
                                 Fill="#FF808080" Margin="0,0,4,0"/>
                        <TextBlock x:Name="ConnText" Text="Disconnected"
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="9" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== 蹂몃Ц 肄섑뀗痢?(?ㅽ겕濡?媛?? ===== -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                          Margin="0" Padding="0">
                <StackPanel x:Name="ContentPanel" Margin="12,8,12,12">

                    <!-- 利앷컯 異붿쿇 ?뱀뀡 -->
                    <TextBlock Text="증강 추천"
                               Foreground="{StaticResource HighlightBrush}"
                               FontSize="14" FontWeight="Bold" Margin="0,4,0,8"/>

                    <!-- "?꾩옱 3媛?利앷컯 ?좏깮" ?덈궡 -->
                    <Border x:Name="AugmentSelectHint" CornerRadius="6"
                            Background="#22FFFFFF" Padding="8,6" Margin="0,0,0,6"
                            Visibility="Collapsed">
                        <TextBlock Text="Click 3 current augments from the list below."
                                   Foreground="{StaticResource SubTextBrush}"
                                   FontSize="11" TextWrapping="Wrap"/>
                    </Border>

                    <!-- 利앷컯 由ъ뒪??-->
                    <ItemsControl x:Name="AugmentList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6"
                                        Background="#22FFFFFF"
                                        Margin="0,0,0,4"
                                        Padding="10,8"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="Augment_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ?곗뼱 諭껋? -->
                                        <Border Grid.Column="0" CornerRadius="4"
                                                Width="28" Height="28"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Background="{Binding TierBrush}">
                                            <TextBlock Text="{Binding Tier}"
                                                       Foreground="White"
                                                       FontSize="14" FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- 利앷컯 ?뺣낫 -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextBrush}"
                                                       FontSize="13" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding TagsText}"
                                                       Foreground="{StaticResource SubTextBrush}"
                                                       FontSize="10" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding ReasonText}"
                                                       Foreground="#FFAED581"
                                                       FontSize="11" Margin="0,2,0,0"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- 援щ텇??-->
                    <Border Height="1" Background="#33FFFFFF" Margin="0,8"/>

                    <!-- ?꾩씠??異붿쿇 ?뱀뀡 -->
                    <TextBlock Text="아이템 빌드"
                               Foreground="{StaticResource HighlightBrush}"
                               FontSize="14" FontWeight="Bold" Margin="0,4,0,8"/>

                    <!-- 肄붿뼱 ?꾩씠??-->
                    <TextBlock Text="코어"
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="11" Margin="0,0,0,4"/>
                    <ItemsControl x:Name="CoreItemList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4"
                                        Background="#1AFFFFFF"
                                        Margin="0,0,0,3"
                                        Padding="8,6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Reason}"
                                                   Foreground="{StaticResource SubTextBrush}"
                                                   FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- ?곹솴??-->
                    <TextBlock Text="Situational"
                               Foreground="{StaticResource SubTextBrush}"
                               FontSize="11" Margin="0,6,0,4"/>
                    <ItemsControl x:Name="SituationalItemList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4"
                                        Background="#1AFFFFFF"
                                        Margin="0,0,0,3"
                                        Padding="8,6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Reason}"
                                                   Foreground="#FFFFAB40"
                                                   FontSize="10" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border CornerRadius="6" Background="#11FFFFFF"
                            Padding="8,6" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Connection Log"
                                       Foreground="{StaticResource SubTextBrush}"
                                       FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBox x:Name="ConnectionLogTextBox"
                                     IsReadOnly="True"
                                     IsReadOnlyCaretVisible="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="{StaticResource SubTextBrush}"
                                     FontSize="10"
                                     FontFamily="Consolas"
                                     MinHeight="56"
                                     MaxHeight="140"
                                     Padding="0"/>
                        </StackPanel>
                    </Border>

                    <!-- ?ロ궎 ?덈궡 -->
                    <Border CornerRadius="6" Background="#11FFFFFF"
                            Padding="8,6" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Hotkeys" Foreground="{StaticResource SubTextBrush}"
                                       FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Foreground="{StaticResource SubTextBrush}" FontSize="10">
                                <Run Text="Ctrl+Shift+O" FontWeight="SemiBold"/> 오버레이 ON/OFF
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource SubTextBrush}" FontSize="10">
                                <Run Text="Ctrl+Shift+C" FontWeight="SemiBold"/> 클릭 통과 토글
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource SubTextBrush}" FontSize="10">
                                <Run Text="Ctrl+Shift+P" FontWeight="SemiBold"/> [DEV] Phase 변경
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>




